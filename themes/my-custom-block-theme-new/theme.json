{
	"$schema": "https://schemas.wp.org/wp/6.5/theme.json",
	"version": 2,
    "settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"layout": {
			"contentSize": "450px",
			"wideSize": "760px"
		},
		"spacing": {
			"blockGap": false,
			"units": [
				"px",
				"em",
				"rem",
				"vh",
				"vw",
				"%"
			],
			"spacingSizes": [
				{
					"slug": "superSmall",
					"name": "Super Small",
					"size": "10px"
				},
				{
					"slug": "medium",
					"name": "Medium",
					"size": "30px"
				},
				{
					"slug": "huge",
					"name": "Huge",
					"size": "60px"
				}
			]
		},
		"dimensions": {
			"minHeight": false
		},
		"typography": {
		   "letterSpacing": false,
		   "fontWeight": false,
		   "fontStyle": false,
		   "textDecoration": false,
		   "textTransform": false,
		   "fontSizes": [
			{
				"slug": "small",
				"size": "13px",
				"name": "Small size"
			},
			{
				"slug": "medium",
				"size": "15px",
				"name": "Medium size"
			}
		   ],
		   "customFontSize": false,
		   "fontFamilies": [
			{
				"slug": "Nunito",
				"name": "Regular text",
				"fontFamily": "Nunito Sans"
			},
			{
				"slug": "heading",
				"name": "Heading font",
				"fontFamily": "Nunito Sans"
			},
			{
				"slug": "heading-2",
				"name": "Inter font",
				"fontFace": [
						{
							"fontFamily": "Inter",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "300 900",
							"src": [
								"file:./assets"
							]
						}
				],
				"fontFamily": "\"Inter\", sans-serif"
			}
		   ]
		},
		"color": {
			"background": true,
			"custom": true,
			"text": true,
			"link": true,
			"defaultPalette": false,
			"palette" : [
				{
					"slug": "rudr-black",
					"color": "#333333",
					"name": "Black"
				},
				{
					"slug": "rudr-blue",
					"color": "#1e73be",
					"name": "Blue"
				},
				{
					"slug": "rudr-red",
					"color": "#d63638",
					"name": "Red"
				}
			],
			"defaultGradients": false,
			"gradients": [
				{
					"slug": "header-gdr",
					"gradient": "linear-gradient(90deg,rgba(246, 202, 237, 1) 0%, rgba(168, 159, 240, 1) 100%)",
					"name": "My header awsome gradient"
				},
				{
					"slug": "footer-gdr",
					"gradient": "linear-gradient(90deg,rgba(240, 198, 236, 1) 0%, rgba(165, 158, 239, 1) 100%)",
					"name": "gradient-2"
				}
			],
			"defaultDuotone": false,
			"customDuotone": false,
			"duotone": [
				{
					"slug": "black-white",
					"colors": [ "#000", "#fff"],
					"name": "my custom duotone"
				}
			]
		},
		"blocks": {
			"core/post-date" : {
				"color" : {
					"defaultGradients": false,
					"customGradient": false,
					"gradients": []
				},
				"typography": {
					"fontFamilies": [],
					"fontSizes": [],
					"lineHeight": true
				}
			},
			"core/cover" : {
				"color": {
					"duotone": []
				}
			},
			"core/column": {
				"color": {
					"background": true,
					"defaultPalette": true,
					"palette": [],
					"defaultGradients": true,
					"gradients": []
				}
			},
			"core/site-title": {
				"spacing": {
					"margin": false,
					"padding": false
				}
			}

		}
    },
    "styles": {
	   "css": ".main-wrapper{box-shadow: 0 0 5px #000;}",
       "typography": {
			"fontFamily": "Nunito Sans",
			"fontSize": "var(--wp--preset--font-size--small)",
			"fontStyle": "normal",
			"fontWeight": "400",
			"lineHeight": "1.55"
		},
		"blocks": {
			"core/site-tagline": {
				"spacing": {
					"margin": {
						"top": "0px"
					}
				}
			},
			"core/columns": {
				"spacing": {
					"margin": {
						"top": "0px"
					}
				}
			}
		},
		"spacing": {
			"padding": {
				"top": "10px",
				"right": "10px",
				"bottom": "10px",
				"left": "10px"
			}
		},
        "color": {
			"background": "#f0f0f0",
			"text": "var(--wp--preset--color--rudr-black)"
		},
        "elements": {
           "heading": {
				"color": {
					"text": "var(--wp--preset--color--rudr-black)"
				},
				"typography": {
					"fontFamily": "Nunito Sans",
					"fontWeight": "400",
					"lineHeight": "1.2"
				}
			},
			"link": {
						"color": {
							"text": "#1e73be"
						},
						"typography": {
								"textDecoration": "none"
						},
						":hover": {
							"color": {
								"text": "#d63638"
							},
							"typography": {
								"textDecoration": "underline"
							}
						}
					},
			"button": {
				"border": {
					"radius": "8px"
				}
			}
				    
        }
    },
    "templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "My Footer"
		},
		{
			"area": "sidebar",
			"name": "sidebar",
			"title": "My Sidebar"
		}
    ],
	"customTemplates": [
		{
			"name": "mayurbesttemplate",
			"title": "Mayur Best Template",
			"postTypes": [
				"post"
			]
		}
	]
}