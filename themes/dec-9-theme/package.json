{
  "name": "my-react-theme-new",
  "version": "1.0.0",
  "description": "A modern WordPress block theme built with React and Tailwind CSS",
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./style.css --minify",
    "watch:css": "tailwindcss -i ./src/styles/tailwind.css -o ./style.css --watch",
    "build:blocks": "wp-scripts build",
    "start:blocks": "wp-scripts start",
    "build": "npm run build:css && npm run build:blocks",
    "start": "npm run watch:css & npm run start:blocks"
  },
  "devDependencies": {
    "@wordpress/scripts": "^28.0.0",
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  },
  "keywords": [
    "wordpress",
    "theme",
    "block-theme",
    "react",
    "tailwind"
  ],
  "author": "Sanskar Maharwade",
  "license": "GPL-2.0-or-later"
}
